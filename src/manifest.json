{
  "manifest_version": 3,
  "name": "BingChat",
  "version": "0.1.0",
  "description": "Chat with your browser",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; default-src 'self' data:"
  },
  "action": {
    "default_title": "MLCBot",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ]
}